<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_72" />

    <TextView
        android:id="@+id/fsi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_27"
        android:layout_marginTop="@dimen/qb_px_16"
        android:text="@string/app_name"
        android:textColor="@color/grey_5a"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fsi_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_27"
        android:layout_marginTop="@dimen/qb_px_44"
        android:text="1m"
        android:textColor="@color/grey_5a"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/fsi_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_20"
        android:layout_marginTop="@dimen/qb_px_44"
        android:layout_marginRight="@dimen/qb_px_70"
        android:layout_toRightOf="@id/fsi_m"
        android:maxLength="2"
        android:text="@string/app_name"
        android:textColor="@color/grey_5a"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/fsi_dh"
        android:layout_width="@dimen/qb_px_30"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/qb_px_17"
        android:layout_marginRight="@dimen/qb_px_37">

        <ImageView
            android:layout_width="@dimen/qb_px_24"
            android:layout_height="@dimen/qb_px_24"
            android:layout_alignParentRight="true"
            android:src="@mipmap/dh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/qb_px_28"
            android:text="路线"
            android:textColor="#b3b3b3"
            android:textSize="13sp" />
    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="附近"
                android:textColor="@color/grey_5a"
                android:textSize="22sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fs_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全部"
                android:textColor="@drawable/tab_text"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/fs_fw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="服务点"
                android:textColor="@drawable/tab_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fs_school"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="学校"
                android:textColor="@drawable/tab_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fs_hospital"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="医院"
                android:textColor="@drawable/tab_text"
                android:textSize="16sp" />
        </LinearLayout>

        <com.baidu.mapapi.map.MapView
            android:id="@+id/fs_bmapView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_320"
            android:clickable="true" />

        <ListView
            android:id="@+id/fs_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />


    </LinearLayout>
</layout>